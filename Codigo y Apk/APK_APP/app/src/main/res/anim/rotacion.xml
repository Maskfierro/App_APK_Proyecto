<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Etiqueta "rotate" para hacer rotar el elemento-->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="2500"
        android:repeatCount="infinite" />

    <!--"fromDegrees" Inicio de la posiscion donde rotara
        "ToDegrees" hasta que posicion rotara
        "duration" cuanto durara rotando-->
</set>